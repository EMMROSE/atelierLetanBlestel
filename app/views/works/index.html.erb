<div class="container">
  <div class="cards-index mt-5">
    <% if @works %>
      <% @works.each do |work| %>
        <%= link_to work_path(work) do %>
          <div class="card-category">
            <%= cl_image_tag work.cover, class: "cover"%>
            <div>
              <h3><%= work.title %></h3>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
